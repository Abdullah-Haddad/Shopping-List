<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>

<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
        <br>
            <h1>Shopping List</h1>
            <!-- Display Button only if logged in -->
            <% if (typeof displayName == 'string' && displayName) { %>
                <a href="/shoppinglist/add" class="btn btn-primary" 
                role="button"><i class="fas fa-plus-circle"></i> Add an Item</a>
                <br>
            <% } %>
            <br>

            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <% if(typeof displayName=='string' && displayName) { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Store</th>
                        <th class="text-center col-4">Description</th>
                        <th class="text-center col-1">Price</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>

                    <% } else { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Store</th>
                        <th class="text-center col-4">Description</th>
                        <th class="text-center col-1">Price</th>
                    <% } %>
                </tr>
                
                <% for(let count=0;count<BookList.length;count++) { %>    
                    <tr class="d-flex">
                        <% if(typeof displayName=='string' && displayName) { %>
                            <td class="text-center col-2"><%= BookList[count].Name %></td>
                            <td class="text-center col-2"><%= BookList[count].Store %></td>
                            <td class="text-center col-4"><%= BookList[count].Description %></td>
                            <td class="text-center col-1"><%= BookList[count].Price %></td>
                            <td class="text-center col-1">
                                <a href="/shoppinglist/edit/<%= BookList[count]._id %>"
                                    class="btn btn-primary">
                                    <i class="fas fa-pencil-alt"></i> Edit </a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/shoppinglist/delete/<%= BookList[count]._id %>"
                                    class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Delete </a>
                            </td>

                        <% } else { %>
                            <td class="text-center col-2"><%= BookList[count].Name %></td>
                            <td class="text-center col-2"><%= BookList[count].Store %></td>
                            <td class="text-center col-4"><%= BookList[count].Description %></td>
                            <td class="text-center col-1"><%= BookList[count].Price %></td>
                        <% } %>       
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>

<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>